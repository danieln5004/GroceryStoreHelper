<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shazam.colorbackground.MainActivity">

    <Button
        android:id="@+id/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:onClick="goRed"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="426dp"
        android:layout_alignBaseline="@+id/blue_button2"
        android:layout_alignBottom="@+id/blue_button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />

    <Button
        android:id="@+id/blue_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blue"
        android:onClick="goBlue"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="426dp"
        android:layout_alignBaseline="@+id/green_button3"
        android:layout_alignBottom="@+id/green_button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/green_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="green"
        android:onClick="goGreen"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="426dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="53dp" />

    <Button
        android:id="@+id/yelloe_button4"
        android:onClick="goYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/blue_button2"
        android:layout_marginBottom="69dp"
        android:layout_toLeftOf="@+id/green_button3"
        android:layout_toStartOf="@+id/green_button3"
        android:text="Yellow" />
</RelativeLayout>
