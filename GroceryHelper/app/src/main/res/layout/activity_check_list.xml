<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.shazam.groceryhelper.checkList">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


        <ListView
            android:id="@+id/Checkable_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
        
        <Button
            android:id="@+id/Check_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Selected Item"
            android:onClick="showselecteditem"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_check_list" />


</RelativeLayout>
